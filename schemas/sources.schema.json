{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Database Sources",
  "description": "Maps database versions and platforms to official download URLs",
  "type": "object",
  "required": ["database", "versions"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "database": {
      "type": "string",
      "description": "Database identifier (e.g., mysql, mariadb, postgresql)"
    },
    "versions": {
      "type": "object",
      "description": "Map of version strings to platform sources",
      "additionalProperties": {
        "$ref": "#/definitions/PlatformSources"
      }
    },
    "notes": {
      "type": "object",
      "description": "Additional notes about the sources",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "PlatformSources": {
      "type": "object",
      "description": "Map of platform IDs to source entries",
      "properties": {
        "linux-x64": { "$ref": "#/definitions/SourceEntry" },
        "linux-arm64": { "$ref": "#/definitions/SourceEntry" },
        "darwin-x64": { "$ref": "#/definitions/SourceEntry" },
        "darwin-arm64": { "$ref": "#/definitions/SourceEntry" },
        "win32-x64": { "$ref": "#/definitions/SourceEntry" }
      },
      "additionalProperties": false
    },
    "SourceEntry": {
      "oneOf": [
        {
          "type": "object",
          "description": "Downloadable binary source",
          "required": ["url", "format"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Direct download URL for the binary"
            },
            "format": {
              "type": "string",
              "enum": ["tar.gz", "tar.xz", "zip", "dmg", "msi", "jar"],
              "description": "Archive format"
            },
            "sha256": {
              "type": ["string", "null"],
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA256 checksum (null if not yet verified)"
            },
            "sha3_256": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA3-256 checksum (used by SQLite instead of SHA256)"
            },
            "sourceType": {
              "type": "string",
              "enum": ["official", "mariadb4j"],
              "description": "Source type: official vendor CDN or MariaDB4j Maven Central"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "description": "Platform requires building from source",
          "required": ["sourceType"],
          "properties": {
            "sourceType": {
              "type": "string",
              "enum": ["build-required"],
              "description": "No binary available, must build from source"
            },
            "sourceUrl": {
              "type": "string",
              "format": "uri",
              "description": "URL to download source code for building"
            },
            "sha3_256": {
              "type": "string",
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA3-256 checksum of source archive (used by SQLite)"
            },
            "sha256": {
              "type": ["string", "null"],
              "pattern": "^[a-fA-F0-9]{64}$",
              "description": "SHA256 checksum of source archive"
            },
            "note": {
              "type": "string",
              "description": "Explanation for why source build is required"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
